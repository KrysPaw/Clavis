<div style="background-color: #4a4e69; margin-top: 100px; margin-left: auto; margin-right:auto; min-height:50%" class="container login-box">
    <div class="text-center">
        <h1 style="color: #e5e5e5; margin-bottom:30px; margin-top:50px;">Zmiana hasła</h1>        
        <form asp-controller="Manager" asp-action="changePassword" method="post">
            <div class="d-block oldPass">
                <label>Stare hasło : </label>
                <input class="pc-input" type="password" name="oldPass" value="" />
            </div>
            <br />
            <div class="d-block newPass">
                <label>Nowe hasło : </label>
                <input class="pc-input" type="password" name="newPass" value="" />
            </div>
            <br />
            <div class="d-block newPassRe">
                <label>Powtórz nowe hasło : </label>
                <input class="pc-input" type="password" name="newPassRe" value="" />
            </div>
            <h5 style="color: #ff6a00; margin-top:10px;">@ViewBag.Message</h5>
            <button class="login-button" type="submit">Zatwierdź</button>
        </form>

    </div>
</div>