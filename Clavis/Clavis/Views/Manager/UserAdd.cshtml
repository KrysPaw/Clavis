@model Clavis.Models.User

<div style="background-color: #4a4e69; margin-top: 100px; margin-left: auto; margin-right:auto; min-height:50%" class="container login-box">
    <div class="text-center">
        <h1 style="color: #e5e5e5; margin-bottom:30px; margin-top:50px;">Dodawanie użytkownika</h1>
        <form asp-action="UserAdd" method="post">
            <div class="form-group">
                <label>Login : </label>
                <input asp-for="Login" class="pc-input" type="text" name="login" value="@ViewBag.Login" />
            </div>
            <br />
            <div class="form-group">
                <label>Adres e-mail : </label>
                <input asp-for="Email" class="pc-input" type="email" name="email" value="@ViewBag.Email" />
            </div>
            <br />
            <div class="form-group">
                <label>Imię : </label>
                <input asp-for="Imie" class="pc-input" type="text" name="imie" value="@ViewBag.Imie" />
            </div>
            <div class="form-group">
                <label>Nazwisko : </label>
                <input asp-for="Nazwisko" class="pc-input" type="text" name="nazwisko" value="@ViewBag.Nazwisko" />
            </div>
            <select class="sort form-group" name="accountType" asp-for="Uprawnienia">
                <option value="user" name="user">Użytkownik</option>
                <option value="manager" name="manager">Zarządca</option>
            </select>
            <h5 style="color: #ff6a00; margin-top:10px;">@ViewBag.Message</h5>
            <button class="login-button" type="submit">Stwórz</button>
        </form>

    </div>
</div>