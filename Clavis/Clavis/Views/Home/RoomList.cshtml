
@{
    //ViewData["Title"] = "Home Page";
}
<div class="row">
    <div class="col-lg-4 filter-box">
        <div class="box-title">
            <h2 class="text-center">Opcje</h2>
            <div class="d-block filter-options">
                <label class="d-inline-block">Numer : </label>
                <input class="numer-filter" type="text" name="numer" value="" />
            </div>
            <div class="d-block filter-options">
                <label>Tylko dostępne : </label>
                <input class="access-filter" type="checkbox" name="access"/>                  
            </div>               
        </div>              
    </div>
    <div class="col-lg-8 room-list-box">
        <div class="box-title">
            <h2 class="text-center">Lista sal</h2>
            <center>
                <table border="1">
                    <tr>
                        <th>Id</th>
                        <th>Numer</th>
                        <th>Opis</th>
                    </tr>
                    @foreach(var item in Model.getRooms)
                    {
                        <tr>
                            <td>@item.rooms_id</td>
                            <td>@item.numer</td>
                            <td>@item.opis</td>
                            <td>@item.miejsca</td>
                        </tr>
                    }
                </table>
            </center>
        </div>   
    </div>
</div>




